@model PedidoDeCompra.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1 class="text-center">Editar Pedido</h1>
    <h4 class="text-center">Pedido: <strong>@Model.Nome</strong></h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input value="@Model.ProdutoId" asp-for="ProdutoId" hidden />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-file-alt"></i></span>
                        <input asp-for="Nome" class="form-control" placeholder="Nome do pedido" />
                    </div>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Fabricante" class="control-label">Fabricante</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-building"></i></span>
                        <input asp-for="Fabricante" class="form-control" placeholder="Nome do fabricante" />
                    </div>
                    <span asp-validation-for="Fabricante" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Status</label>
                    <input asp-for="Statuss" class="form-control" readonly />
                    <span asp-validation-for="Statuss" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Prioridade</label>
                    <select asp-for="Prioridade" class="form-control">
                        <option value="Baixa">Baixa</option>
                        <option value="Média">Média</option>
                        <option value="Alta">Alta</option>
                    </select>
                    <span asp-validation-for="Prioridade" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="VendedorId" class="control-label">Vendedor</label>
                    <select asp-for="VendedorId" class="form-control" asp-items="ViewBag.VendedorId"></select>
                    <span asp-validation-for="VendedorId" class="text-danger"></span>
                </div>

                <br />

                <div class="form-group text-center">
                    <input type="submit" value="Criar" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
