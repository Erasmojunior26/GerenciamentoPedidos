                                            </div>
                                            <form asp-action="Delete" asp-controller="Produtos" class="modal-footer">
                                                <input name="id" type="hidden" asp-for="@pedido.ProdutoId" />
                                                <input type="submit" value="Delete" class="btn btn-danger" />
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function submitForm(tarefaId) {
            document.getElementById('form-' + tarefaId).submit();
        }
    </script>

    <script>
        $('#ExemploModalCentralizado').on('shown.bs.modal', function () {
            $('#meuInput').trigger('focus')
        })
    </script>

