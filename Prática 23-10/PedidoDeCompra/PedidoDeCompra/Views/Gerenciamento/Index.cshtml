@model PedidoDeCompra.Models.Gerenciamento

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="text-center">Gerenciamento de Pedidos</h1>
    <hr />
    <div class="row">
        <!-- Coluna Aberto -->
        <div class="col-md-4">
            <h4 class="text-center text-primary">Solicitado</h4>
            <div class="card-deck">
                @foreach (var pedido in Model.Solicitado)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@pedido.Nome</h5>
                            <p class="card-text"><strong>Fabricante: </strong> @pedido.Fabricante</p>
                            <p class="card-text"><strong>Prioridade: </strong>  @pedido.Prioridade</p>
                            <p class="card-text"><strong>Vendedor: </strong> @pedido.Vendedor.Nome</p>

                            <form asp-action="EditStatus" asp-controller="Produtos" method="post" class="update-status-form" id="form-@pedido.ProdutoId">
                                <input type="hidden" name="id" value="@pedido.ProdutoId" />
                                <div>
                                    <label>
                                        <input type="radio" name="status" value="Solicitado" @(pedido.Statuss == "Solicitado" ? "checked" : "") onchange="submitForm('@pedido.ProdutoId')" /> Solicitado
                                    </label>
                                    <label>
                                        <input type="radio" name="status" value="Expedição" @(pedido.Statuss == "Expedição" ? "checked" : "") onchange="submitForm('@pedido.ProdutoId')" /> Expedição
                                    </label>
                                    <label>
                                        <input type="radio" name="status" value="Enviado" @(pedido.Statuss == "Enviado" ? "checked" : "") onchange="submitForm('@pedido.ProdutoId')" /> Solicitado
                                    </label>
                                </div>
                            </form>
                            <hr />


                            <div class="d-flex justify-content-between">
                                <a asp-action="Edit" asp-controller="Produtos" asp-route-id="@pedido.ProdutoId" class="btn btn-warning">Editar</a>
                                <a id="meuInput" class="btn btn-danger" data-toggle="modal" data-target="#ExemploModalCentralizado">Excluir</a>

                                <!-- Modal -->
                                <div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="TituloModalCentralizado">Deletar <strong>@pedido.Nome</strong></h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                A deleção do pedido @pedido.Nome não é reversível, deseja continuar a ação?
                                            </div>
                                            <form asp-action="Delete" asp-controller="Produtos" class="modal-footer">
                                                <input name="id" type="hidden" asp-for="@pedido.ProdutoId" />
                                                <input type="submit" value="Delete" class="btn btn-danger" />
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Coluna Em andamento -->
